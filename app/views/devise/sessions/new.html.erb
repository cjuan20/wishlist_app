<section id="login">

  <h2>Log in</h2><br>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <div class="actions">
      <%= f.submit "Log in", :class => "devise-button" %>
    </div>
  <% end %>

  <div class="guest-login">
    <h3>Guest-login option</h3>
    <p>Email: guest@wishlist.com</p>
    <p>Password: wishlist</p>
  </div>


  <%= render "devise/shared/links" %>
</section>
